<!-- fragment_help.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/docter_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="168dp"
        android:text="Doctor 1: \nName: Dr. John Doe\nSpecialty: Sports Medicine\nContact: 123-456-7890"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/doctor2TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Doctor 2: \nName: Dr. Jane Smith\nSpecialty: Orthopedics\nContact: 987-654-3210"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/docter_tv"
        app:layout_constraintStart_toStartOf="@+id/docter_tv"
        app:layout_constraintTop_toBottomOf="@+id/docter_tv" />

    <Button
        android:id="@+id/callDoctorBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="248dp"
        android:onClick="onCallDoctorButtonClick"
        android:text="Call Doctor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/doctor2TextView"
        app:layout_constraintStart_toStartOf="@+id/doctor2TextView" />

</androidx.constraintlayout.widget.ConstraintLayout>
